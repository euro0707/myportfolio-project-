      }
      .hero-content p {
        font-size: 1.3rem;
      }
      .hero-arrow {
        margin-top: 2.5rem;
        font-size: 2rem;
        animation: bounce 1.5s infinite;
      }
      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(16px); }
      }

      /* Skills Section */
